{
      "version": 2,
      "buildCommand": "npm run build --prefix client",
      "installCommand": "npm install && npm install --prefix client",
      "outputDirectory": "client/build",
      "env": {
              "NODE_ENV": "production"
      },
      "routes": [
              {
                        "src": "/api/(.*)",
                        "dest": "server/index.js"
              },
              {
                        "src": "/(.*)",
                        "dest": "client/build/index.html"
              }
      ]
}
